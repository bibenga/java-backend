{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "FirebaseAdminApplication",
            "request": "launch",
            "mainClass": "com.github.bibenga.palabras.firebase.FirebaseAdminApplication",
            "projectName": "firebase"
        },
        {
            "type": "java",
            "name": "WebApiApplication",
            "request": "launch",
            "mainClass": "com.github.bibenga.palabras.api.WebApiApplication",
            "projectName": "api",
            "vmArgs": "-Xmx256M -XX:+UseSerialGC"
        },
        {
            "type": "java",
            "name": "UIApplication",
            "request": "launch",
            "mainClass": "com.github.bibenga.palabras.ui.UIApplication",
            "projectName": "ui",
            "vmArgs": "-Xmx256M -XX:+UseSerialGC"
        },
        {
            "type": "java",
            "name": "LoadDataApplication",
            "request": "launch",
            "mainClass": "com.github.bibenga.palabras.loader.LoadDataApplication",
            "projectName": "loader",
            "vmArgs": "-Xmx256M -XX:+UseSerialGC"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        }
    ]
}